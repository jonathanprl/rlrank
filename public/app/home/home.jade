.sp__wrapper
  .container
    .sp__hero
      h1 View & share your Rocket League rank
      .row
        .col-md-4.col-md-offset-4
          form.sp__rank-form
            .form-group
              input.form-control(ng-model="vm.steamProfileUrl" placeholder="Steam Community Link")
            button.btn.btn-primary.btn-block(ng-click="vm.authorise()")
              | Get Ranks & Stats
          h4(ng-if="vm.profile")
            | Hello {{ vm.profile.personaname }}!
          ul.list-group
            li.list-group-item(ng-repeat="playlist in vm.playlists")
              span {{ playlist.Playlist | rlPlaylist }} |&nbsp;
              span {{ playlist.Tier | rlTier }} |&nbsp;
              span(ng-if="playlist.MatchesPlayed") Matches played: {{ playlist.MatchesPlayed }} |&nbsp; 
              span(ng-if="playlist.MMR") MMR: {{ playlist.MMR }}
    .sp__leaderboards
      h2 Live Global Leaderboards
      .row
        .col-md-3(ng-repeat="leaderboard in vm.leaderboards")
          h3 {{ $index + 10 | rlPlaylist }}
          table.table
            tr
              td
                strong Position
              td
                strong Name
              td
                strong Rank
            tr(ng-repeat="player in leaderboard")
              td
                strong {{ '#' + ($index + 1) }}
              td
                span(ng-if="player.name") {{ player.name }}
              td
                span(ng-if="player.mmr") {{ player.mmr }} 
