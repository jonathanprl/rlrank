.sp__wrapper
  .container
    .sp__hero
      h1 View & share your Rocket League rank
      .row
        .col-md-4.col-md-offset-4
          form.sp__rank-form
            .form-group
              input.form-control(ng-model="vm.steamProfileUrl" placeholder="Steam Community Link")
            button.btn.btn-primary.btn-block(ng-click="vm.authorise()")
              | Get Ranks & Stats
          h4(ng-if="vm.profile")
            | Hello {{ vm.profile.personaname }}!
          table.table.table-responsive
            tr
            td
              strong Pos
            td
              strong Rank
            td
              strong Username
            td
              strong MMR
          tr
            td(ng-repeat="playlist in vm.playlists")
              span {{ playlist.Playlist | rlPlaylist }} |&nbsp;
              span {{ playlist.Tier | rlTier }} |&nbsp;
              span(ng-if="playlist.MatchesPlayed") Matches played: {{ playlist.MatchesPlayed }} |&nbsp; 
              span(ng-if="playlist.MMR") MMR: {{ playlist.MMR }}
    .sp__leaderboards
      h2 Live Global Leaderboards
      .row
        .col-md-3(ng-repeat="(playlist, leaderboard) in vm.leaderboards")
          h3 {{ playlist | rlPlaylist }}
          table.table.table-responsive
            tr
              td
                strong Pos
              td
                strong Rank
              td
                strong Username
              td
                strong MMR
            tr(ng-repeat="player in leaderboard")
              td
                strong {{ '#' + ($index + 1) }}
              td
                img.img-responsive(ng-src="/img/ranks/{{ player.Value }}_w.png" ng-title="player.Value | rlPlaylist")
              td
                span(ng-if="player.UserName" ng-title="player.UserName") {{ player.UserName }}
              td
                span(ng-if="player.MMR") {{ player.MMR }}
