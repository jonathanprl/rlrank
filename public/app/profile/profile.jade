.sp__wrapper
  .sp__spinner(ng-hide="vm.playlists")
  .container(ng-show="vm.playlists")
    .row
      .col-md-4.col-md-offset-1
        h1 {{ vm.profile.display_name }}
    .row
      .col-md-4.col-md-offset-1
        span.sp__sub-header Updated < 5 minutes ago
      .col-md-1.text-right
        span.sp__sub-header
          i.fa.fa-circle.text-danger
          //- fa-dot-circle-o
          | &nbsp;LIVE
    .row
      .col-md-1
        | &nbsp;
      .col-md-5
        table.table.table-responsive.sp__table
          thead
            tr
              th
                | Mode
              th(colspan="2")
                | Rank
              th
                span Div
                span.hidden-xs ision
              th
                | # Played
              th
                | MMR
          tbody
            tr(ng-repeat="playlist in vm.playlists")
              td 
                span {{ playlist.playlist | rlPlaylist }}
              td 
                img(ng-src="/img/ranks/{{ playlist.tier || 0 }}_w.png" title="{{ playlist.tier | rlTier }}" style="width:36px;")
              td.text-left 
                span.hidden-xs {{ playlist.tier | rlTier }}
              td
                span(ng-if="playlist.division > 0") {{ playlist.division | roman }}
              td
                span(ng-if="playlist.matches_played") {{ playlist.matches_played }} 
              td.text-right(style="white-space: pre;")
                span.rank__change(ng-class="{'text-success': vm.liveRank[playlist.playlist] > 0, 'text-danger': vm.liveRank[playlist.playlist] < 0}" ng-show="vm.liveRank[playlist.playlist]")
                  i.fa(ng-class="{'fa-caret-up': vm.liveRank[playlist.playlist] > 0, 'fa-caret-down': vm.liveRank[playlist.playlist] < 0}")
                  | &nbsp;{{ vm.liveRank[playlist.playlist] }}
                span(ng-if="playlist.mmr")
                  | {{ playlist.mmr }}
      .col-md-4
        .row
          .col-md-12.col-sm-8
            table.table.table-responsive.sp__table.profile__stats
              thead
                tr
                  th(ng-repeat="stat in vm.stats")
                    | {{ stat.name }}
              tbody
                tr
                  td(ng-repeat="stat in vm.stats")
                   | {{ stat.value }}
          .col-md-12.col-sm-4
            .sp__share
              h4 Share
              .row
                .col-md-7
                  .form-group
                    input.form-control.input-sm(ng-model="vm.shareUrl" readonly)
                .col-md-5
                  .sp__share-btn
                    | <a class="twitter-share-button" ng-href="https://twitter.com/intent/tweet?text=Check out my Rocket League rank!&url={{ vm.shareUrl }}&via=rlrank&hashtags=rlrank,rocketleague">Tweet</a>
                  .sp__share-btn
                    | <div class="fb-share-button" data-href="{{ vm.shareUrl }}" data-layout="button"></div>       
