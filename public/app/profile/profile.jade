.sp__wrapper
  .container
    .sp__hero
      h1 {{ vm.profile.personaname }}
      .row
        .col-md-4.col-md-offset-4
          table.table.table-responsive.sp__table
            tr(ng-if="vm.playlists")
              td
                strong Mode
              td(colspan="2")
                strong Rank
              td
                strong Matches Played
              td
                strong MMR
            tr(ng-repeat="playlist in vm.playlists" ng-if="playlist.Playlist")
              td 
                span {{ playlist.Playlist | rlPlaylist }}
              td 
                img(ng-src="/img/ranks/{{ playlist.Tier || 0 }}_w.png" title="{{ playlist.Tier | rlTier }}" style="width:36px;")
              td.text-left 
                span {{ playlist.Tier | rlTier }}
              td
                span(ng-if="playlist.MatchesPlayed") {{ playlist.MatchesPlayed }} 
              td
                span(ng-if="playlist.MMR") {{ playlist.MMR }}
          .sp__share(ng-if="vm.playlists")
            h4 Share
            .row
              .col-md-8
                .form-group(ng-if="vm.playlists")
                  input.form-control.input-sm(ng-model="vm.shareUrl" readonly)
              .col-md-4
              a.twitter-share-button(ng-href="https://twitter.com/intent/tweet?text=Check out my Rocket League rank!&url={{ vm.shareUrl }}&via=rlrank&hashtags=rlrank,rocketleague" target="_blank") Tweet
              a(target="_blank" ng-href="http://www.facebook.com/sharer/sharer.php?u={{ vm.shareUrl }}") Facebook
          hr(ng-if="vm.playlists")
          form.sp__rank-form
            .form-group
              label.control-label Enter a Steam Profile URL
              input.form-control(ng-model="vm.steamProfileUrl" placeholder="https://steamcommunity.com/profiles/76561198076736523")
            button.btn.btn-primary.btn-block(ng-click="vm.router.goToProfile(url)")
              | Get Ranks & Stats
